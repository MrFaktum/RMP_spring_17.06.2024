<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_button_background"
    android:orientation="horizontal"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        style="@style/ButtonCardViewStyle"
        app:cardCornerRadius="30dp">
    <android.widget.Button
        android:id="@+id/red_theme_button"
        style="@style/ButtonSvgStyle"
        android:background="@drawable/svg_red_theme_button" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/ButtonCardViewStyle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp">

        <android.widget.Button
            android:id="@+id/green_theme_button"
            style="@style/ButtonSvgStyle"
            android:background="@drawable/svg_green_theme" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/ButtonCardViewStyle"
        app:cardCornerRadius="30dp">
    <android.widget.Button
        android:id="@+id/blue_theme_button"
        style="@style/ButtonSvgStyle"
        android:background="@drawable/svg_blue_theme" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
